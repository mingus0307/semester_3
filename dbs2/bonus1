
DROP TABLE IF EXISTS MovieCharacter;
DROP TABLE IF EXISTS MovieGenre;
DROP TABLE IF EXISTS Genre;
DROP TABLE IF EXISTS Movie;
DROP TABLE IF EXISTS Person;

DROP SEQUENCE IF EXISTS movie_id_seq CASCADE;
DROP SEQUENCE IF EXISTS person_id_seq CASCADE;
DROP SEQUENCE IF EXISTS genre_id_seq CASCADE;
DROP SEQUENCE IF EXISTS movchar_id_seq CASCADE;

CREATE SEQUENCE movie_id_seq START 1;
CREATE SEQUENCE person_id_seq START 1;
CREATE SEQUENCE genre_id_seq START 1;
CREATE SEQUENCE movchar_id_seq START 1;

select * from MovieCharacter

select * from movie; 

